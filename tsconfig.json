{
  "compilerOptions": {
    "target": "ES2022", // Target modern ECMAScript features
    "module": "ESNext", // Use modern ES modules
    "moduleResolution": "bundler", // Use the 'bundler' resolution strategy
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generate .d.ts files
    "sourceMap": true, // Generate source maps for debugging
    "paths": {
      "@goscript/builtin": ["./builtin/builtin.ts"],
      "@goscript/*": ["./gs/*/%.gs.ts", "./builtin/*.ts"]
    }
  },
  "include": ["compiler", "builtin", "compliance", "gs"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"] // Exclude tests from build output
}
