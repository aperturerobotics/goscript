    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "lib": [
      "es2022",
      "esnext.disposable",
      "dom"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "paths": {
      "@goscript/*": [
        "../../../gs/*",
        "../../../compliance/deps/*"
      ],
      "@goscript/github.com/aperturerobotics/goscript/compliance/tests/simple_pointer_assign/*": [
        "./*"
      ]
    },
    "sourceMap": true,
    "target": "es2022"
  },
  "extends": "../../../tsconfig.json",
  "include": [
    "index.ts",
    "simple_pointer_assign.gs.ts"
  ]
}
